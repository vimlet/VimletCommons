{
  "name": "@vimlet/io",
  "version": "0.0.1",
  "description": "File utilities",
  "main": "index.js",
  "dependencies": {
    "fs-extra": "5.0.0",
    "request": "2.85.0",
    "glob": "7.1.2",
    "@vimlet/progress":"0.0.1"
  },
  "devDependencies": {
    "@vimlet/alpha": "0.4.0"
  },
  "author": "Vimlet",
  "repository": {
    "type": "git",
    "url": "https://github.com/vimlet/VimletCommons.git"
  },
  "license": "BSD-2-Clause-FreeBSD",
  "keywords": [
    "zip",
    "tar",
    "tgz",
    "compress",
    "uncompress",
    "spawn",
    "exec",
    "run",
    "download",
    "os"
  ],
  "scripts": {
    "format:js": "alpha format-js",
    "format:html": "alpha format-html",
    "format:css": "alpha format-css",
    "format": "run-s format:js format:html format:css",
    "test": "alpha test",
    "doc:api": "alpha doc api -i **/*.js,**/*.html -o ../../docs/node/api",
    "doc:article": "alpha doc article -i ../../docs/md/**/*.md -o ../../docs/node/article",
    "doc:main": "alpha doc main -p ../../docs/node/api -r ../../docs/node/article -o ../../docs",
    "doc": "run-s doc:api doc:article doc:main",
    "readme": "alpha readme",
    "meta": "alpha meta -i **/*.vmt"
  }
}
